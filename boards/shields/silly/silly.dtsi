#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan_composite;
        zmk,matrix_transform = &default_transform;
        zmk,physical-layout = &physical_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;  // 6 columns per side
        rows = <4>;      // 3 matrix rows + 1 thumb row
        
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)     RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)     RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
                            RC(3,0) RC(3,1) RC(3,2)             RC(3,6) RC(3,7) RC(3,8)
        >;
    };

    // Main key matrix (3x6 per side)
    kscan_matrix: kscan_matrix {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        
        row-gpios
            = <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // Row1 - P1.04
            , <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // Row2 - P1.06  
            , <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // Row3 - P1.13
            ;

        col-gpios
            = <&pro_micro 7 GPIO_ACTIVE_HIGH>   // col1 - P0.11
            , <&pro_micro 6 GPIO_ACTIVE_HIGH>   // col2 - P1.00
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>   // col3 - P0.24
            , <&pro_micro 4 GPIO_ACTIVE_HIGH>   // col4 - P0.22
            , <&pro_micro 3 GPIO_ACTIVE_HIGH>   // col5 - P0.20
            , <&pro_micro 2 GPIO_ACTIVE_HIGH>   // col6 - P0.17
            ;
    };

    // Direct GPIO thumb keys (3 keys)
    kscan_direct: kscan_direct {
        compatible = "zmk,kscan-gpio-direct";
        
        input-gpios
            = <&pro_micro 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // thumb1 - P1.11
            , <&pro_micro 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // thumb2 - P0.10
            , <&pro_micro 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // thumb3 - P0.09
            ;
    };

    // Composite kscan to combine matrix and direct keys
    kscan_composite: kscan_composite {
        compatible = "zmk,kscan-composite";
        rows = <4>;
        columns = <12>;
        
        // Include the matrix driver
        matrix {
            kscan = <&kscan_matrix>;
        };
        
        // Include the direct GPIO driver and shift to row 3
        direct {
            kscan = <&kscan_direct>;
            row-offset = <3>;
        };
    };

    physical_layout: physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Silly Split";
        
        keys
            //                     w   h    x    y     rot   rx   ry
            = <&key_physical_attrs 100 100   0    0     0     0    0>   // Tab
            , <&key_physical_attrs 100 100 100    0     0     0    0>   // B  
            , <&key_physical_attrs 100 100 200    0     0     0    0>   // L
            , <&key_physical_attrs 100 100 300    0     0     0    0>   // D
            , <&key_physical_attrs 100 100 400    0     0     0    0>   // W
            , <&key_physical_attrs 100 100 500    0     0     0    0>   // Z
            , <&key_physical_attrs 100 100 600    0     0     0    0>   // '
            , <&key_physical_attrs 100 100 700    0     0     0    0>   // F
            , <&key_physical_attrs 100 100 800    0     0     0    0>   // O
            , <&key_physical_attrs 100 100 900    0     0     0    0>   // U
            , <&key_physical_attrs 100 100 1000   0     0     0    0>   // J
            , <&key_physical_attrs 100 100 1100   0     0     0    0>   // Bspc
            , <&key_physical_attrs 100 100   0  100     0     0    0>   // Ctrl
            , <&key_physical_attrs 100 100 100  100     0     0    0>   // N
            , <&key_physical_attrs 100 100 200  100     0     0    0>   // R
            , <&key_physical_attrs 100 100 300  100     0     0    0>   // T
            , <&key_physical_attrs 100 100 400  100     0     0    0>   // S
            , <&key_physical_attrs 100 100 500  100     0     0    0>   // G
            , <&key_physical_attrs 100 100 600  100     0     0    0>   // Y
            , <&key_physical_attrs 100 100 700  100     0     0    0>   // H
            , <&key_physical_attrs 100 100 800  100     0     0    0>   // A
            , <&key_physical_attrs 100 100 900  100     0     0    0>   // E
            , <&key_physical_attrs 100 100 1000 100     0     0    0>   // I
            , <&key_physical_attrs 100 100 1100 100     0     0    0>   // ,
            , <&key_physical_attrs 100 100   0  200     0     0    0>   // Shift
            , <&key_physical_attrs 100 100 100  200     0     0    0>   // Q
            , <&key_physical_attrs 100 100 200  200     0     0    0>   // X
            , <&key_physical_attrs 100 100 300  200     0     0    0>   // M
            , <&key_physical_attrs 100 100 400  200     0     0    0>   // C
            , <&key_physical_attrs 100 100 500  200     0     0    0>   // V
            , <&key_physical_attrs 100 100 600  200     0     0    0>   // K
            , <&key_physical_attrs 100 100 700  200     0     0    0>   // P
            , <&key_physical_attrs 100 100 800  200     0     0    0>   // .
            , <&key_physical_attrs 100 100 900  200     0     0    0>   // ;
            , <&key_physical_attrs 100 100 1000 200     0     0    0>   // /
            , <&key_physical_attrs 100 100 1100 200     0     0    0>   // Enter
            , <&key_physical_attrs 100 100 300  300     0     0    0>   // GUI (left thumb)
            , <&key_physical_attrs 100 100 400  300     0     0    0>   // Mo2 (left thumb)
            , <&key_physical_attrs 100 100 500  300     0     0    0>   // Alt/Esc (left thumb)
            , <&key_physical_attrs 100 100 600  300     0     0    0>   // Space (right thumb)
            , <&key_physical_attrs 100 100 700  300     0     0    0>   // Mo3 (right thumb)
            , <&key_physical_attrs 100 100 800  300     0     0    0>   // Del (right thumb)
            ;
    };
};
